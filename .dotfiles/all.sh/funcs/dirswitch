#!/usr/bin/env bash

# For keeping a list of directories for quick switching

pydloc=$HOME/.dotfiles/all.sh/funcs/utils/pyd.py

function d(){
    if [[ $1 != '' ]] && [[ $1 != '+' ]] && [[ $1 != '-' ]] && [ $1 -eq $1 ] 2>/dev/null; then
        local dr
        dr="$(python "$pydloc" $@)"

        local ex=$?

        echo $dr

        if [ $ex -eq 0 ]; then
            cd "$dr"
        fi
    else
        python "$pydloc" $@
    fi
}
