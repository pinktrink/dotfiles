[push]
	default = simple
[merge]
	tool = opendiff
	conflictstyle = diff3
[diff]
	tool = opendiff
[help]
	autocorrect = 1
[color]
	ui = true
[column]
	ui = auto
[grep]
	lineNumber = true
[difftool]
	prompt = false
[mergetool]
	prompt = false
[core]
	excludesfile = ~/.gitignore_global
[commit]
	template = ~/.dotfiles/etc/git_commit_template
[include]
	path = ~/.gituser
[alias]
	clone = clone --recursive
	sm = submodule foreach git
	cache-dir = ! echo '*\\n!.gitignore' > $1/.gitignore && true
	c = commit
	co = checkout
	pr = pull --rebase
	pl = pull
	p = push
	f = fetch
	m = merge
	r = reset
	b = bisect
	cf = config
	cfg = config --global
	cfs = config --system
	cff = config --file
	s = status
	a = add
	d = diff
	ap = add -p
	cl = clone
	mt = mergetool
	st = stash
	pop = stash pop
	app = stash apply
	ls = ls-files
	lsm = ls-files -m
	rb = rebase
	t = tag
	l = log
	rl = reflog
	re = remote
	i = init
	l1 = log --oneline
        la = ! git config --list | grep '^alias\\.' | perl -pe 's/^alias\\.(.+?)=(.+)$/\\1: \\2/'
	dt = difftool
	h = help
